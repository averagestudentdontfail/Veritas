%%% Header and Footer %%%

\usepackage{fancyhdr}
\usepackage[bottom,hang]{footmisc}
\pagestyle{fancy} \fancyhf{}
\renewcommand{\headrulewidth}{0.3pt}
\setlength{\footnotemargin}{6pt}

\renewcommand{\chaptermark}[1]{\markboth{\myriaddisplayfont\fontsize{10}{12}\selectfont\bfseries\textsc{\thechapter. #1}}{}}
\renewcommand{\sectionmark}[1]{\markright{\myriaddisplayfont\fontsize{9}{11}\selectfont\bfseries\textsc{\thesection. #1}}}

\fancyhead[L]{%
    \myriaddisplayfont\fontsize{10}{12}\selectfont\bfseries%
    \thepage%
    \vspace{3pt}%
}
\fancyhead[R]{%
    \myriaddisplayfont\fontsize{9}{11}\selectfont%
    \leftmark%
    \vspace{3pt}%
}

\fancypagestyle{plain}{%
    \fancyhf{}
    \renewcommand{\headrulewidth}{0pt}
    \fancyfoot[C]{%
        \myriaddisplayfont\fontsize{11}{13}\selectfont\bfseries%
        \thepage%
        \vspace{3pt}%
    }
    \setlength{\footskip}{1.6cm}

    \ifthenelse{\equal{\DocStageOption}{working}}{
        \fancyfoot[L]{%
            \myriadlightfont\fontsize{8}{10}\selectfont%
            \textsc{\GetDocumentVersion} \textbullet{} \textit{\today}%
        }
    }{}
}

\ifthenelse{\equal{\DocStageOption}{working}}{%
    \fancyfoot[C]{%
        \myriadlightfont\fontsize{8}{10}\selectfont%
        \textsc{\GetDocumentVersion} \textbullet{} \textit{\today}%
    }%
}{}