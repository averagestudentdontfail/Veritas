%%% Chapters and Sections %%%
\ifthenelse{\equal{\ChapterOption}{classic}}{
    \titleformat{\chapter}[display]%
    {\raggedleft\huge}%
    {\raggedleft\fontsize{88}{10}\bfseries{\color{chapterdarkred}{\minionfont\thechapter}}}%
    {0pt}%
    {\hspace{3cm}\garamondfont\fontsize{28}{30}\selectfont}%
    
    \titlespacing*{\chapter}{0pt}{-20pt}{30pt}
}{}

\ifthenelse{\equal{\ChapterOption}{fancy}}{
    \titleformat{\chapter}[display]
    {\flushright\normalsize\huge\color{black}}%
    {\flushright\normalsize%
    {\minionfont\fontsize{25}{25}\selectfont\hspace*{-1em}\rule[-2pt]{.1pt}{30pt}\hspace{0.5em}\raisebox{4.5pt}{\thechapter}}}%
    {10pt}%
    {\garamondfont\addfontfeature{LetterSpace=6}\huge\scshape}%
    
    \titlespacing*{\chapter}{0pt}{-20pt}{30pt}
}{}

\ifthenelse{\equal{\ChapterOption}{modern}}{
    \titleformat{\chapter}[display]
    {\normalsize\huge\color{black}}%
    {\minionfont\flushright\fontsize{84}{10}\bfseries%
    {\color{chaptergray}\raisebox{5pt}{\thechapter}}%
    }{10pt}%
    {\garamondfont\addfontfeature{LetterSpace=6}\fontsize{28}{32}\MakeUppercase}%
    
    \titlespacing*{\chapter}{0pt}{-20pt}{30pt}
}{}

\titleformat{\section}{\garamondfont\fontsize{15pt}{17pt}\selectfont\bfseries}{\thesection}{1em}{}
\titleformat{\subsection}{\garamondfont\fontsize{13.5pt}{15.5pt}\selectfont\bfseries}{\thesubsection}{1em}{}